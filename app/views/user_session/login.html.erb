<h1>Login</h1>

<%= form_for @user_session do |f| %>
  <% if !@user_session.errors.empty? %>
    <ul>
      <% @user_session.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
  <%= f.label :login %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.submit "Login" %>
<% end %>
